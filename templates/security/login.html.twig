{% extends 'base.html.twig' %}

{% block title %}
    {{ 'login.title'|trans }}
{% endblock %}

{% block content %}
    <h2>{{ 'login.title'|trans }}</h2>

    {% if error %}
        <div class="alert alert-danger">{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login-check') }}" method="post">
        <div class="form-group">
            <label class="control-label required" for="username">{{ 'login.username'|trans }}</label>
            <input type="text" id="username" name="_username" required="required" class="password-field form-control" value="{{ last_username }}">
        </div>

        <div class="form-group">
            <label class="control-label required" for="password">{{ 'login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" class="password-field form-control">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

        <button type="submit" class="btn">{{ 'login.submit'|trans }}</button>
    </form>
{% endblock %}
