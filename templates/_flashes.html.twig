{% for label, messages in app.session.flashBag.all %}
    <div class="alert alert-{{ label }}" role="alert">
        {%- if messages|length == 1 -%}
            {{- messages|first -}}
        {%- else -%}
            <ul>
                {% for message in messages %}
                    <li>{{ message }}</li>
                {% endfor %}
            </ul>
        {%- endif -%}
    </div>
{% endfor %}
